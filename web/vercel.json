{
    "version": 2,
    "builds": [
        {
            "src": "api/app.py",
            "use": "@vercel/python",
            "config": { "runtime": "python3.11" }
        }
    ],
    "functions": {
        "api/**/*.py": {
            "runtime": "python3.11"
        }
    },
    "installCommand": "pip install -r requirements.txt",
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api/app.py"
        },
        {
            "src": "/static/(.*)",
            "dest": "api/app.py"
        },
        {
            "src": "/(.*)",
            "dest": "api/app.py"
        }
    ],
    "env": {
        "PYTHONPATH": "."
    }
} 